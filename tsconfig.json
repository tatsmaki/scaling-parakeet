{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}